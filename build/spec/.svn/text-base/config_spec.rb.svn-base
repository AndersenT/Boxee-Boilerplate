require 'rspec'
require './lib/config'

describe GreatBoxee::Config, "loading environment from configurations" do
  
  it "should read the environment settings from the config file" do

    GreatBoxee::Config.should have(2).environments
    
    envs = GreatBoxee::Config.environments
    
    envs['prod']['repository'].should == 'http://dir.boxee.tv/apps'
    envs['beta']['repository'].should == 'http://dir.greatboxee.com'
    
  end
  
end